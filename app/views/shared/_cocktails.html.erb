<div class="container">
  <div class="row" style="height:400px">
      <% @cocktails.each do |cocktail| %>
        <div class="col-sm-3">
          <div class="card card-shadow" style="height: 200px;">
            <% unless cocktail.img_url.nil?%>
              <div class="card-body card-body-border" style="background-size: cover; background-image: url(<%=cocktail.img_url%>)">
                <%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-name" %>
              </div>
            <% end %>

              <%# <%= link_to image_tag(cocktail.img_url, alt: cocktail.name, width: 200), cocktail_path(cocktail) %>
          </div>
        </div>
      <% end %>
  </div>
</div>
